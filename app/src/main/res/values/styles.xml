<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:title">@string/nav_cards</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="StatText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="RaceText" parent="StatText">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomToggleButton">
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="CustomToggleButton.Stat">
        <item name="android:textColor">@color/color_filter_mana</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

